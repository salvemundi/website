{
  "name": "directus-extension-entra-auth",
  "version": "1.0.0",
  "description": "Directus extension for Microsoft Entra ID authentication",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-custom-endpoint"
  ],
  "main": "src/index.js",
  "directus:extension": {
    "type": "endpoint",
    "path": "src/index.js",
    "source": "src/index.js",
    "host": "*"
  },
  "scripts": {
    "build": "echo 'No build required for Raw Source'",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link"
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^17.0.0"
  }
}